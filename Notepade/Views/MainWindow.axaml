<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Notepade.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="550"
		Width = "400" Height ="550"
        x:Class="Notepade.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Notepade">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

		<Grid ColumnDefinitions="auto" RowDefinitions="485,30,30">

			<TextBox Name="contentTextBox" Text="Binding addToText" Grid.Row="0"  Grid.Column="0" Width="400" />
			<Button  Name="openButton" Grid.Row="1"  Grid.Column="0" Content="Открыть" Width="400" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
			<Button  Name="saveButton" Grid.Row="2"  Grid.Column="0" Content="Сохранить" Width="400" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Left" />
		</Grid>


</Window>
